{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "fs:default",
    "core:resources:default",
    "log:default",
    {
    "identifier": "fs:scope",
      "allow": [{ "path": "$AUDIO" }, { "path": "$AUDIO/*" }]
    }
  ]
}